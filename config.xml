<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.radiozerro"
        versionCode="10" 
        version   = "1.0.1">


    <name>Radio Zerro</name>

    <description>
        Plona powered by PhoneGap 
    </description>

    <author href="http://zszczech.zut.edu.pl/git" email="zs@g.pl">
        ZnakZorro
    </author>
	
<content src="index.html" />
<plugin name="cordova-plugin-whitelist" version="1" />
<access origin="*" />
<allow-intent href="http://*/*" />
<allow-intent href="https://*/*" />
<allow-intent href="tel:*" />
<allow-intent href="sms:*" />
<allow-intent href="mailto:*" />
<allow-intent href="geo:*" />	
	
	
    <preference name="phonegap-version" value="cli-5.2.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="true" />
    
<access origin="*" launch-external="yes" />
<allow-intent href="*" />
<allow-navigation href="*" />



	
		<icon src="radiozerro.png" />
		<icon src="radiozerro.png" gap:platform="android" gap:density="ldpi" />
		<icon src="radiozerro.png" gap:platform="android" gap:density="mdpi" />
		<icon src="radiozerro.png" gap:platform="android" gap:density="hdpi" />
		<icon src="radiozerro.png" gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="radiozerro.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="radiozerro.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="radiozerro.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="radiozerro.png" gap:platform="android" gap:density="xhdpi" />




<access origin="*" onlyInBrowser="true" />
<preference name="stay-in-webview" value="false" />
	

</widget>
